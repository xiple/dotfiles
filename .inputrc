$if Bash

# Don't ring bell on completion
set bell-style none

# Toggle vi editing mode 
set editing-mode vi

# Display colors on completion based on LS_COLORS 
set colored-stats on

# Briefly move the cursor to an opening parenthesis when a closing parenthesis
# is inserted
set blink-matching-paren on

set colored-completion-prefix on

set expand-tilde off

# Append "/" to all dirnames
set mark-directories on
set mark-symlinked-directories on

# Match all files (on by default)
set match-hidden-files on

# Add flags to specify file type (ls cmds)
set visible-stats on

$endif

